<h1>Add coordinator</h1>
<form action="/" method="post">
  <div class="form-group">
    <label for="name">Coordinator: </label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-warning">Add Coordinator</button>
</form>

<ul>
  <% @coordinators.each do |coordinator| %>
    <li> <a href="/coordinator/<%= coordinator.id %>"> <%= coordinator.name %></a></li>
  <% end %>
</ul>

<br>
<h3>Upcoming games:</h3>

<ul>
  <% @games.each do |game| %>
    <li> <a href="/game/<%= game.id %>"> <%= game.name %></a></li>
  <% end %>
</ul>
